            width: 45%;
            text-align: center;
        }

        .time-display {
            font-size: 2em;
            margin: 20px 0;
        }

        .progress-bar {
            background-color: #ddd;
            height: 10px;
            border-radius: 5px;
            overflow: hidden;
        }

        .progress {
            background-color: #007bff;
            height: 100%;
            width: 0;
            transition: width 1s linear;
        }

        button {
            background-color: #007bff;
            color: white;
