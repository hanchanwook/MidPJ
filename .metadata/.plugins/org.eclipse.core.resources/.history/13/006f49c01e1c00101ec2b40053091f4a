<body>
    <div class="container">
        <header>
            <h1>출퇴근 등록</h1>
            <div>
                <span>&lt;</span> 2025.4.3
            </div>
        </header>
        <div class="attendance-section">
            <div class="card">
                <div class="label">출근하기</div>
                <div class="illustration"></div>
                <div class="time-display" id="checkInTime">00:00</div>
                <div class="status" id="checkInStatus">미등록</div>
                <button id="checkInBtn" onclick="checkIn()">출근등록</button>
                <button class="record-btn" onclick="recordCheckIn()" disabled>▼</button>
            </div>
            <div class="card">
                <div class="label">퇴근하기</div>
                <div class="illustration"></div>
                <div class="time-display" id="checkOutTime">09:00</div>
                <div class="status" id="checkOutStatus">출근</div>
                <button id="checkOutBtn" onclick="checkOut()" disabled>퇴근등록</button>
            </div>
        </div>
    </div>

    <script>
        let isCheckedIn = false;

        // 현재 시간 가져오기
        function getCurrentTime() {
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            return hours + ':' + minutes;
        }

        // 출근 등록
        function checkIn() {
            if (!isCheckedIn) {
                const currentTime = getCurrentTime();
                document.getElementById('checkInTime').textContent = currentTime;
                document.getElementById('checkInStatus').textContent = '출근';
                document.getElementById('checkOutStatus').textContent = '출근';
                document.getElementById('checkInBtn').disabled = true;
                document.getElementById('checkOutBtn').disabled = false;
                document.getElementsByClassName('record-btn')[0].disabled = false;
                isCheckedIn = true;
            }
        }

        // 퇴근 등록
        function checkOut() {
            if (isCheckedIn) {
                const currentTime = getCurrentTime();
                document.getElementById('checkOutTime').textContent = currentTime;
                document.getElementById('checkOutStatus').textContent = '퇴근완료';
                document.getElementById('checkOutBtn').disabled = true;
                isCheckedIn = false;
            }
        }

        // 기록 버튼 (출근 시간 기록 후 상태 변경)
        function recordCheckIn() {
            alert('출근 시간이 기록되었습니다.');
            document.getElementsByClassName('record-btn')[0].disabled = true;
        }
    </script>
</body>
